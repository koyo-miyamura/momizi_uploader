<!DOCTYPE html>
<html>
  <head>
    <title>MomiziUploader</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <% if user_signed_in? %>
    <body>
      <div class="header">
        <h1 class="logo">
          もみじあっぷろ〜だ〜
          <span class="username-header"> <i class="fa fa-user"></i> <%= current_user.name %> </span>
          <%= link_to destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしますか？"} do %>
            <i class="fa fa-sign-out logout"></i> 
          <% end %>
        </h1>
      </div>
  <% elsif %>
    <body class="hold-transition login-page">
      <div class="header">
        <h1 class="login-logo logo">もみじあっぷろ〜だ〜</h1>
      </div>
  <% end %>
      <%= yield %>
    </body>
</html>
